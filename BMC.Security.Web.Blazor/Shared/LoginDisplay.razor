@inject NavigationManager navMgr
@inject AuthenticationStateProvider authProvider

<AuthorizeView>
    <Authorized>
        <div class="top-row px-4">
            <a @onclick="@(() => LogOut())" target="_blank">Logout</a>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="top-row px-4">
            <a href="auth/login" target="_blank">Login</a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code
{
    private void LogOut()
    {
        navMgr.NavigateTo("/logout");
    }
}